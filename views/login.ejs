<div class="container">
  <div class="form-container login-container">
    <% if (successMsg.length !== 0) { %>
    <div class="alert alert-success fw-bold" style="background-color: rgb(184, 245, 156)"><%= successMsg %></div>
    <% } %> <% if (msglogin.length !== 0) { %>
    <div class="alert alert-success fw-bold" style="background-color: rgb(211, 114, 114)"><%= msglogin %></div>
    <% } %>
    <form method="post" action="/login">
      <h1>Login</h1>
      <input type="text" placeholder="Username" name="username" required />
      <input type="password" placeholder="Password" name="password" required />
      <button type="submit">Login</button>
    </form>
  </div>
</div>
