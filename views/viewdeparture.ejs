<div>
  <table class="">
    <thead>
      <tr>
        <th scope="">Flight</th>
        <th scope="">Destination</th>
        <th scope="">Time</th>
        <th scope="">Gate</th>
        <th scope="">Remark</th>
      </tr>
    </thead>
    <tbody class="">
      <% departures.forEach((depart) => { %>
      <tr>
        <td>
          <div class="tampillogo"></div>
          <div>
            <span class="maskapai" style="text-transform: uppercase"><%= depart.airline %></span>
            <span><%= depart.flightnumber %></span>
          </div>
        </td>
        <td style="text-transform: uppercase"><%= depart.destination %></td>
        <td><%= depart.departtime %></td>
        <td><%= depart.gate %></td>
        <td style="text-transform: uppercase"><%= depart.remark %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="container-depart">
    <div class="depart">
      <div class="bottom-center">DEPARTURE</div>
      <div class="date"></div>
      <div class="pukul"></div>
    </div>
  </div>
</div>

<!-- script -->
<script src="js/loadlogo.js"></script>
<script>
  const datetime = new Date();
  const h = datetime.getHours();
  const yyyy = datetime.getFullYear().toString();
  let mm = datetime.getMonth();
  let dd = datetime.getDate().toString();
  //console.log(datetime.toLocaleTimeString("en-US", { hour12: false }).substring(0, 5));

  const bulan = ["Januari", "Februari", "Maret", "April", "Mei", "Juni", "Juli", "Agustus", "September", "Oktober", "November", "Desember"];

  const formattedToday = dd + " " + bulan[mm] + " " + yyyy;

  const today = document.querySelector(".date");
  today.innerHTML = formattedToday;

  setInterval(myTimer, 1000);

  function myTimer() {
    const localDate = new Date();
    const skrg = localDate.toLocaleTimeString("en-US", { hour12: false }).substring(0, 5);
    document.querySelector(".pukul").innerHTML = skrg;
  }
</script>
